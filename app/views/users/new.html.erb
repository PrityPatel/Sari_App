<div class="container">
  <h1>Sign Up</h1>
<%= bootstrap_form_for @user do |f| %>
<% if @user.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% for message in @user.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <%= f.text_field :name, placeholder: "Enter your name" %>
  <%= f.email_field :email, placeholder: "Enter your email" %>
  <%= f.password_field :password, placeholder: "Enter your password" %>
  <%= f.password_field :password_confirmation, placeholder: "Enter your password again" %>
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
    <% end %>
  <br>
  <br>
  <button type="button" class="btn btn-default">
    <%= link_to 'Already Registered? Click Here!', new_session_path %></button>
  <br>
  <br>
  <button type="button" class="btn btn-default">
    <%= link_to 'Back to Welcome Page', root_path %></button>
  <br>
  <br>
  <div class="container">
    <img src="http://ak-hdl.buzzfed.com/static/2013-10/enhanced/webdr05/15/17/enhanced-buzz-8157-1381873037-33.jpg">
  </div>
</div>




