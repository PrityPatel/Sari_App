<!-- this is the page view that is rendered when the user wants to edit a specific sari gallery post -->

<!--  edit_sari GET    /saris/:id/edit(.:format) saris#edit -->

<div class="container">
  <h1>Update Sari Gallery</h1>
  <%= bootstrap_form_for @sari do |f| %>
    <% if @sari.errors.any? %>
    <div class="error_messages">
     <h2>Upload is invalid</h2>
      <ul>
       <% for message in @sari.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

  <div class="field">
    <%= f.text_field :image %>
  </div>
  <div class="field">
  <%= f.text_field :story %>
  </div>
  <div class="field">
  <%= f.text_field :owner %>
  </div>
  <div class="actions">
  <%= f.submit class: "btn btn-success"%>
  </div>
  <% end %>
<br>
  <%= link_to 'Cancel', user_path(current_user), class: "btn btn-default" %>
</div>





