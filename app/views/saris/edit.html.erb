<div class="container">
  <h1>Update Sari Gallery</h1>
<%= bootstrap_form_for @sari do |f| %>
<% if @sari.errors.any? %>
  <div class="error_messages">
    <h2>Upload is invalid</h2>
    <ul>
      <% for message in @sari.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="field">
  <%= f.text_field :image %>
</div>
<div class="field">
  <%= f.text_field :story %>
</div>
<div class="field">
  <%= f.text_field :owner %>
</div>
<br>
<div class="actions"><%= f.submit %></div>
<% end %>
<br>
<br>
<div class="container">
<%= link_to 'Cancel', user_path(current_user) %>
</div>
</div>





